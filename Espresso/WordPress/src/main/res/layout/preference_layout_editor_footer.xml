<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_extra_large"
    tools:ignore="RtlHardcoded" >

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/footer_text"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:textColor="@color/grey_darken_10"
        android:textSize="@dimen/text_sz_medium"
        android:text="@string/preference_editor_footer" >
    </org.wordpress.android.widgets.WPTextView>

    <ImageView
        android:contentDescription="@string/preference_editor_footer_description"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_toEndOf="@+id/footer_text"
        android:layout_toRightOf="@+id/footer_text"
        android:layout_width="wrap_content"
        android:tint="@color/grey_darken_10"
        app:srcCompat="@drawable/ic_info_outline_grey_dark_18dp" >
    </ImageView>

</RelativeLayout>
